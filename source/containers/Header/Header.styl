@import "../../palette.styl"

header
  background-image url("../../image/mic-cutout.png")
  background-repeat no-repeat
  background-position-x center
  background-position-y bottom
  background-color rgb(22, 24, 29)
  background-size cover
  text-align center
  width 100%
  height 100vh
  color white

  .background-box
    margin 0
    width 100%
    height 100vh
    background-size cover
    background-color rgba(45, 45, 45 0.3)

    .intro-text
      padding-top 40px
      padding-bottom 100px
      padding-left 40px
      padding-right 40px

      .intro-heading
        font-weight 1200
        font-size 50px
        line-height 50px
        margin-bottom 20px
        font-family 'Ubuntu', sans-serif
        
  .btn-yellow
    border 1px solid $accent-color
    border-radius 3px
    padding 10px 20px
    background-color white
    color $accent-color
    font-weight 400
    font-size 20px
    font-family 'Ubuntu', sans-serif
    outline 0

    transition all 0.2s ease

    &:hover
      color white
      background-color $accent-color
      transition all 0.2s ease

    &:active, &:focus
      color white
      background-color darken($accent-color, 1.8)
      transition all 0.2s ease

@media (max-width 767px)

  header
    background-position-x center
    background-position-y bottom
    background-size 200%

    .background-box
        .intro-text
          .intro-heading
            font-size 30px