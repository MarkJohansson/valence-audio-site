@import "../../palette.styl"

body
  overflow-x hidden
  font-family 'Ubuntu', sans-serif

.container-fluid
  margin 0
  padding 0

.background-box
  background-size cover
  width 100%
  height 100vh
  background-color rgba(97, 97, 97, 0.1)

hr
  border-width 3px
  max-width 75px
  padding-bottom 20px

.btn-primary
  font-weight 700
  font-family 'Ubuntu', sans-serif

.btn-xl
    font-weight 700
    border-radius 3px
    font-size 18px
    padding 20px 40px

@media (min-width 768px)
  body
    padding 0

  .navbar-fixed-top, .navbar-fixed-bottom, .navbar-static-top
    margin-left 0
    margin-right 0
    margin-bottom 0

section
  h2.section-heading
      font-size 40px
      margin-top 0
      margin-bottom 0
  
  h3.section-subheading
      font-size 16px
      text-transform none
      font-style italic
      font-weight 400
      margin-bottom 75px

.section-padding
  margin 0
  padding 30px 0


.Mark
  background-color $primary-color-dark

hr.primary
  border-color $accent-color

hr.light
  border-color $primary-color-text
